<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_recycler"
    tools:context=".ui.fragment.SavePointDialog">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/margin_start_recycler"
        android:orientation="horizontal"
        android:padding="@dimen/padding">

        <RadioButton
            android:id="@+id/radio_button_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:drawableStart="@drawable/point_a" />

        <RadioButton
            android:id="@+id/radio_button_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/point_b" />

        <RadioButton
            android:id="@+id/radio_button_c"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/point_c" />

        <RadioButton
            android:id="@+id/radio_button_d"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/point_d" />
    </RadioGroup>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_start_recycler"
        android:layout_marginTop="@dimen/button_marginTop"
        android:autofillHints="Введите имя метки"
        android:gravity="center_vertical"
        android:inputType="text"
        android:padding="@dimen/padding"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_start_recycler"
        android:layout_marginTop="@dimen/button_marginTop"
        android:text="@string/save" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_start_recycler"
        android:layout_marginTop="@dimen/button_marginTop"
        android:text="@string/delete"
        android:visibility="gone" />
</LinearLayout>